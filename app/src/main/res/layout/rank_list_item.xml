<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="40dp"
        android:layout_weight="1"
        android:layout_marginRight="0dp">
    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/rank_list_item_profile_image"
        android:src="@mipmap/maier"
/>
    <ImageView
        android:id="@+id/rank_list_item_profile_best_icon"
        android:src="@drawable/ic_best"
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="0dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rank_list_item_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1."/>
            <TextView
                android:id="@+id/rank_list_item_name"
                android:text="Hermann Maier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRankTableFieldText"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/best_icon"
                android:src="@drawable/ic_best"
                android:layout_gravity="center"
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/rank_list_item_rel_best"
                android:text="0"
                android:paddingTop="2dp"
                android:minWidth="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/me_icon"
                android:src="@mipmap/hirscher"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/rank_list_item_rel_me"
                android:text="-0.13"
                android:layout_gravity="bottom"
                android:paddingTop="2dp"
                android:minWidth="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rank_list_item_time"
        android:text="2:24,10"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right"
        android:layout_weight="1"/>

</LinearLayout>