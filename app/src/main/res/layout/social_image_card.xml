<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:scaleType="centerCrop"

            android:src="@drawable/example_selfie" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_below="@id/image"
            android:layout_marginBottom = "1dp"

            android:layout_marginTop="1dp"

            android:background="#787878" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="3dp">

                <Button
                    android:id="@+id/facebook_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:background="#00FFFFFF"

                    android:drawableLeft="@drawable/facebook_icon"

                    android:onClick="feedbackButtonOnClick"
                    android:text="420 Likes" />

                <Button
                    android:id="@+id/instagram_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"

                    android:background="#00FFFFFF"
                    android:drawableLeft="@drawable/instagram_icon"

                    android:onClick="feedbackButtonOnClick"
                    android:text="69 Likes" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="3dp">

                <Button
                    android:id="@+id/twitter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:background="#00FFFFFF"

                    android:drawableLeft="@drawable/twitter_icon"

                    android:onClick="feedbackButtonOnClick"
                    android:text="100 Retweets" />

                <Button
                    android:id="@+id/comments_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"

                    android:background="#00FFFFFF"
                    android:drawableLeft="@drawable/comments_icon"

                    android:onClick="feedbackButtonOnClick"

                    android:text="300 Comments" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>