<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="104dp"
            android:layout_height="110dp"
            app:srcCompat="@mipmap/hirscher"
            android:minWidth="40dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcel Hirscher"
                android:textColor="@color/colorRankTableFieldText"
                android:textSize="30sp"
                android:paddingTop="36sp"
                android:paddingLeft="0sp"/>

            <TextView
                android:id="@+id/rank_detail_lap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Lap Startnumber 8"
                android:height="30sp"/>
        </LinearLayout>

    </GridLayout>


    <TextView
        android:id="@+id/current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1:19:85"
        android:textSize="36sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"/>

    <TableLayout
        android:id="@+id/intermed_results"
        android:layout_width="match_parent"
        android:layout_height="315dp">
        <TableRow
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="12sp"
                android:layout_marginTop="10sp"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="#8a000000"
                android:minWidth="50sp"
                android:layout_marginTop="10sp"
                android:text="Time">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Best"
                android:textSize="12sp"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="10sp"
                android:textColor="#8a000000">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Me"
                android:textSize="12sp"
                android:minWidth="50sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="10sp"
                android:textColor="#8a000000">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Rang" />

</LinearLayout>