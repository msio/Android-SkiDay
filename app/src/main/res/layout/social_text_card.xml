<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="3h ago"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timestamp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore " />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_below="@id/post"
            android:layout_marginBottom="1dp"

            android:layout_marginTop="1dp"

            android:background="#787878" />

        <LinearLayout
            android:id="@+id/feedback_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider">


            <Button
                android:id="@+id/facebook_button"
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:layout_marginRight="10dp"

                android:background="#00FFFFFF"
                android:drawableLeft="@drawable/facebook_icon"

                android:onClick="feedbackButtonOnClick"
                android:text="420"
                android:textSize="10dp" />

            <Button
                android:id="@+id/twitter_button"
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:layout_marginRight="10dp"

                android:background="#00FFFFFF"
                android:drawableLeft="@drawable/twitter_icon"

                android:onClick="feedbackButtonOnClick"
                android:text="100"
                android:textSize="10dp" />

            <Button
                android:id="@+id/comments_button"
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:layout_marginRight="10dp"

                android:background="#00FFFFFF"
                android:drawableLeft="@drawable/comments_icon"

                android:onClick="feedbackButtonOnClick"

                android:text="300"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>